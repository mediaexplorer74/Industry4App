<Page
    x:Class="Industry4App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Industry4App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Индустрия 4.0 - Тренды" 
                   FontSize="24" FontWeight="Bold" Margin="20"/>

        <!-- RefreshContainer для возможности обновления списка -->
        <RefreshContainer Grid.Row="1" x:Name="RefreshContainer">
            <ListView x:Name="NewsListView"
                      ItemsSource="{x:Bind NewsItems}"
                      IsItemClickEnabled="True"
                      ItemClick="ListView_ItemClick"
                      Padding="10"
                      HorizontalContentAlignment="Stretch"
                      SelectionMode="None">
                      
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:NewsItem">
                        <Grid Width="250" Height="280" Margin="10" Background="#F0F0F0" CornerRadius="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="160"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Картинка -->
                            <Image Source="{x:Bind ImageUrl}" Stretch="UniformToFill" Grid.Row="0"/>

                            <!-- Текст -->
                            <StackPanel Grid.Row="1" Padding="10">
                                <TextBlock Text="{x:Bind Title}"
                                           TextWrapping="Wrap"
                                           Foreground="Black"
                                           MaxLines="3"
                                           TextTrimming="CharacterEllipsis"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{x:Bind Summary}"
                                           FontSize="12"
                                           Foreground="Gray"
                                           Margin="0,5,0,0"
                                           MaxLines="2"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                
                <!-- Устанавливаем стиль для самого ListView, чтобы элементы центрировались -->
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </RefreshContainer>
    </Grid>
</Page>