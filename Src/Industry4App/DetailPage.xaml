<Page
    x:Class="Industry4App.DetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Industry4App">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <!-- Заголовок -->
        <TextBlock x:Name="HeaderTitle" Text="Детали дела" VerticalAlignment="Center" Margin="10,0,0,0"/>

        <!-- ScrollView для отображения содержимого статьи -->
        <ScrollViewer Grid.Row="1" Padding="10">
            <StackPanel x:Name="ArticleContentPanel">
                <Image x:Name="ArticleImage" Stretch="Uniform" MaxHeight="300" Margin="0,0,0,10"/>
                <TextBlock x:Name="ArticleTitleTextBlock" TextWrapping="Wrap" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="ArticleOverviewTextBlock" TextWrapping="Wrap" FontSize="14" FontStyle="Italic" Margin="0,0,0,10"/>
                <!-- Content will be dynamically added here -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>